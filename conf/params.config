/*
This file should contain all parameters which are globally required by the workflows and submodules.
*/

params {
    
    // Required parameters
    input                      = "./testdata/input/vcf/"    // testdata set of three celllines provided with the workflow 
    output                     = "mutsig_default"           // 
    publish_dir                = "./output"                 // default output directory
    
    // Ressource options
    cpus                       = 2                          // most processes are single CPU processes
    mem                        = 8                          // default in GB

    // Boilerplate options
    tracedir = "./runtime_inf"
}
