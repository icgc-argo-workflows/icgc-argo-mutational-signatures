/*
This file should contain all parameters which are globally required by the workflows and submodules.
*/

params {
    
    // Required parameters
    input                       = "./testdata/input/vcf/"    // testdata set of three celllines provided with the workflow 
    output                      = "ICGC_mutsig"              // default output file name
    publishDir                  = "../output"                // default output directory path

    // SigProfiler suite parameters

    min                         = 1                          // minimal signatures to extract in SigProfiler
    max                         = 10                         // maximal signatures to extract in SigProfiler
    nmf                         = 100                        // NMF replicates - same as signaturetoolslib
    
    // Ressource options
    cpus                        = 2                          // most processes are single CPU processes
    mem                         = 8                          // default in GB

    // Boilerplate options
    tracedir                    = "./runtime_inf"
    publish_dir_mode            = "copy"
}
